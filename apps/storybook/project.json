{
  "name": "storybook",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/storybook",
  "prefix": "fes",
  "targets": {
    "serve": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "apps/storybook/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "config": {
          "configFolder": "apps/storybook/.storybook"
        },
        "outputPath": "dist/storybook/all",
        "outputDir": "dist/storybook/all",
        "webpackStatsJson": "dist/storybook/all"
      }
    },
    "deps": {
      "executor": "./tools/executors/dependency-tree:deps"
    },
    "visual-regression-pr": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chromatic --ci --only-changed --exit-zero-on-changes"
      }
    },
    "visual-regression-branch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "chromatic --ci --only-changed --exit-zero-on-changes --auto-accept-changes"
      }
    }
  },
  "tags": ["type:app"],
  "implicitDependencies": ["ui", "content"]
}
