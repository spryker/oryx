{
  "name": "storefront",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/storefront/src",
  "tags": ["type:app"],
  "targets": {
    "serve": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "apps/storefront"
      }
    },
    "serve-e2e": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": [
          "npx vite build -c vite.config.prod-no-ssr.ts",
          "npx vite preview -c vite.config.prod-no-ssr.ts -d"
        ],
        "cwd": "apps/storefront",
        "parallel": false
      }
    },
    "serve-ssr": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "npm run dev:ssr",
        "cwd": "apps/storefront"
      }
    },
    "serve-prod": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "commands": [
          "nx build-client storefront",
          "nx build-ssr storefront",
          "npm run dev:ssr --omit=dev"
        ],
        "cwd": "apps/storefront",
        "parallel": false
      }
    },
    "build-client": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "npm run build:client",
        "cwd": "apps/storefront"
      }
    },
    "build-ssr": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "npm run build:ssr",
        "cwd": "apps/storefront"
      }
    },
    "build": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "npm run build",
        "cwd": "apps/storefront"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/storefront/**/*.ts"]
      }
    },
    "deps": {
      "executor": "./tools/executors/dependency-tree:deps"
    }
  }
}
