{
  "name": "testfront",
  "version": "0.1.0",
  "private": true,
  "description": "Composable Storefront boilerplate application for release testing",
  "type": "module",
  "scripts": {
    "dev": "vite -c vite.config.dev.ts",
    "dev:ssr": "ts-node --experimentalSpecifierResolution node --esm server/server",
    "build": "npm run build:client && npm run build:ssr && npm run build:netlify",
    "build:client": "vite build",
    "build:ssr": "vite build -c vite.config.server.ts",
    "build:netlify": "vite build -c vite.config.netlify.ts"
  },
  "dependencies": {
    "@spryker-oryx/themes": "latest",
    "@spryker-oryx/presets": "latest"
  },
  "devDependencies": {
    "vite": "^4.0.0",
    "vite-plugin-static-copy": "^0.13.0"
  }
}
