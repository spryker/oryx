{
  "name": "site",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "./tools/executors/components-library:build"
    },
    "paths": {
      "executor": "./tools/executors/components-library:paths",
      "options": {
        "exclude": ["public"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/domain/site/**/*.ts"]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/web-components",
        "port": 4400,
        "staticDir": ["libs/domain/site/public"],
        "configDir": "libs/domain/site/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "stylelint": {
      "executor": "nx-stylelint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/domain/site/**/*.css",
          "libs/site/**/*.styles.ts"
        ]
      }
    },
    "test": {
      "executor": "./tools/executors/oryx-vite:vitest"
    }
  },
  "tags": ["layer:domain"]
}
